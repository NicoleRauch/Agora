include  ../../../views/formComponents
include userinfoform
include participationinfoform
  
extends ../../../views/simpleLayout

block title 
  | Registration - SoCraTes
block content
  .page-header
    h1 Participate in SoCraTes 2015
  form#participationform.relaxed(action='/registration/participate', method='post')
    +csrf
    if (participation.id)
      +hidden('id', participation.id)
    fieldset
      +memberinfoform(participation.member, 'members.edit_registration')
      +userinfoform(participation.addon)
      +participationinfoform(roomOptions)

      .row(style='margin-bottom: 10px')
        .col-sm-12
          button.pull-right.btn.btn-primary(type='submit') I really do want to participate!
