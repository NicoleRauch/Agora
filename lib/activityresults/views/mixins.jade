mixin thumbnailInfos(img)
  - var shortTitle = shortenTitle(img.title);
  - var timestamp = img.timestamp;
  - if (img.title && img.title.length > 0 && timestamp) {
  | #{shortTitle} - #{moment(img.timestamp).format("LT")}
  - } else if (img.title && img.title.length > 0) {
  = shortTitle
  - } else if (timestamp) {
  = moment(img.timestamp).format("LT")
  - }
