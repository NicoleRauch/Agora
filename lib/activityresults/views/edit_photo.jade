extends ../../../views/layoutOnlyMain

include  ../../../views/formComponents
include ./mixins

block title
  = activityResult.id + " / Edit Photo"

block content
  form(role="form",method="post")
    +csrf
    .row
      .col-xs-12.col-md-3.thumbnail-container
        img#thumbnail(src=photo.uri + '?size=thumb')
      .col-xs-12.col-md-6
        ul.tag-list.row
          +tagButton('Berlin')
          +tagButton('Böhmesaal')
          +tagButton('Bremen')
          +tagButton('Dortmund')
          +tagButton('Dresden')
          +tagButton('Düsseldorf')
          +tagButton('Erfurt')
          +tagButton('Hamburg')
          +tagButton('Hannover')
          +tagButton('Köln')
          +tagButton('Potsdam')
          +tagButton('Stuttgart')
          +tagButton('Wiesbaden')

    .row
      .col-md-8
        .form-group
          input.form-control#text-title(type="text",name="title",value=photo.title,placeholder=t('activityresults.photoTitlePlaceholder'))

     .row
       .col-md-2.col-md-offset-6(style="text-align:right")
         button.btn.btn-primary(type="submit")
          span.glyphicon.glyphicon-ok
            | &nbsp;
          = t('activityresults.done')
