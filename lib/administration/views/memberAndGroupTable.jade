extends ../../../views/layoutOnlyMain
include ../../members/views/memberlist-mixin

block scripts
  script(src='/clientscripts/jquery.dataTables.min.js')
  script.
    $(document).ready(function() {
          $('#memberandgrouptable').dataTable({
            oLanguage: {
              sUrl: tableLangUrl
            },
        bPaginate: false,
        bAutoWidth: false,
        aaSorting: [[ 1 , 'desc' ]],
        bStateSave: true
      });
    });
block title
  | Übersicht der Mitglieder und ihrer Gruppen

block content
  .row
    .col-md-12
      .page-header
        h2 Verwaltung
          small  Mitglieder und Gruppen
      .table-responsive
        table.table.table-condensed.table-hover.table-striped#memberandgrouptable
          thead
            tr
              th Name
              th Nickname
              for group in groups
                th #{group.shortName || group.longName.substring(0, 4) + '…'}
          tbody
            for member in members
              tr
                td #{member.firstname() + ' ' + member.lastname()}
                td: mixin linkedMember(member.nickname())
                for group in groups
                  td.center
                    if member.isInGroup(group.id)
                      i.fa.fa-check &nbsp;
