extends ../../../views/layoutOnlyMain
include ../../../views/dataTables-mixin

block scripts
  script(src='/clientscripts/jquery.dataTables.min.js')
  +dataTable('#grouptable', "[[ 1, 'asc' ]]", "[{ bSortable : false }, null, null, null, null, null]", true)

block title
  | Übersicht der Gruppen

block content
  .row
    .col-md-12
      .page-header
        h2 Verwaltung
          small  Gruppen
  .row
    .col-md-12
      .table-responsive
        table.table.table-condensed.table-hover.table-striped#grouptable
          thead
            tr
              th Edit
              th Name
              th Titel
              th Präfix
              th Beschreibung
              th Gruppenart
          tbody
            for group in groups
              tr
                td: a.btn-sm(href='/groups/edit/#{encodeURIComponent(group.id)}'): i.fa.fa-edit.fa-fw
                th #{group.id}
                td #{group.longName}
                td #{group.emailPrefix}
                td.ellipsis: span(rel='tooltip', data-placement='left', data-content='#{group.descriptionHTML()}') #{group.description}
                td #{group.type}
