extends ../../../views/layoutOnlyMain
include ../../../views/dataTables-mixin

block scripts
  script(src='/clientscripts/jquery.dataTables.min.js')
  +dataTable('#activitytable', "[[ 1, 'asc' ]]", "[{ bSortable : false }, null, null, { sType: 'date-eu' }, { sType: 'date-eu' }, null, null, null, null]", true)

block title
  | Übersicht der Gruppen

block content
  .row
    .col-md-12
      .page-header
        h2 Verwaltung
          small  Aktivitäten  
  .row
    .col-md-12
      .table-responsive
        table.table.table-condensed.table-hover.table-striped#activitytable
          thead
            tr
              th Edit
              th Titel
              th Adress-Suffix
              th Start
              th Ende
              th Veranstaltungsort
              th Beschreibung
              th Wegbeschreibung
              th Gruppe
          tbody
            for activity in activities
              tr
                td: a.btn-sm(href='/activities/edit/#{encodeURIComponent(activity.url())}'): i.fa.fa-edit.fa-fw
                td #{activity.title()}
                td #{activity.url()}
                td #{activity.startMoment().lang(language).format('L')}
                td #{activity.endMoment().lang(language).format('L')}
                td #{activity.location()}
                td.ellipsis: span(rel='tooltip', data-placement='left', data-content='#{activity.descriptionHTML()}', data-title='<h4>#{activity.title()}</h4>') #{activity.description()}
                td.ellipsis: span(rel='tooltip', data-placement='left', data-content='#{activity.directionHTML()}') #{activity.direction()}
                td #{activity.groupName()}
